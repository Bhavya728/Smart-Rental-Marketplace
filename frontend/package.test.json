{
  "name": "rentease-frontend-tests",
  "version": "1.0.0",
  "description": "Test configuration for RentEase Frontend",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "test:imports": "jest --testPathPattern=imports.test.js",
    "test:routing": "jest --testPathPattern=routing.test.js", 
    "test:navigation": "jest --testPathPattern=navigation.test.js",
    "test:components": "jest --testPathPattern=components.test.js",
    "test:integration": "jest --testPathPattern=integration.test.js",
    "test:debug": "jest --no-cache --verbose"
  },
  "devDependencies": {
    "@testing-library/react": "^13.4.0",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/user-event": "^14.4.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "@babel/preset-env": "^7.22.0",
    "@babel/preset-react": "^7.22.0",
    "babel-jest": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": ["<rootDir>/src/__tests__/setupTests.js"],
    "moduleNameMapping": {
      "\\.(css|less|scss|sass)$": "identity-obj-proxy",
      "\\.(jpg|jpeg|png|gif|svg)$": "<rootDir>/src/__tests__/__mocks__/fileMock.js"
    },
    "transform": {
      "^.+\\.(js|jsx)$": "babel-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "!src/__tests__/**",
      "!src/main.jsx",
      "!src/index.js"
    ],
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "<rootDir>/src/__tests__/**/*.test.{js,jsx}"
    ],
    "moduleDirectories": [
      "node_modules",
      "<rootDir>/src"
    ]
  },
  "babel": {
    "presets": [
      ["@babel/preset-env", { "targets": "defaults" }],
      ["@babel/preset-react", { "runtime": "automatic" }]
    ]
  }
}